{
  "info": {
    "name": "GroundingDINO Performance Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "6f1d1a6a-7fff-4a4e-9f3a-collection-groundingdino"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "use_gpu", "value": "true" },
    { "key": "create_overlay", "value": "false" }
  ],
  "item": [
    {
      "name": "Warmup",
      "item": [
        {
          "name": "Warmup",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/warmup",
              "host": ["{{baseUrl}}"],
              "path": ["warmup"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "use_gpu", "type": "text", "value": "{{use_gpu}}" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Warmup OK', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200]);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Run",
      "item": [
        {
          "name": "Run detection",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/run",
              "host": ["{{baseUrl}}"],
              "path": ["run"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file", "src": "{{image}}" },
                { "key": "reference_json", "type": "file", "src": "{{reference_json}}" },
                { "key": "use_gpu", "type": "text", "value": "{{use_gpu}}" },
                { "key": "create_overlay", "type": "text", "value": "{{create_overlay}}" }
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Ensure data file variables are present (Desktop Runner/Newman only)",
                  "const img = pm.iterationData.get('image') || pm.variables.get('image');",
                  "const ref = pm.iterationData.get('reference_json') || pm.variables.get('reference_json');",
                  "console.log('Iter vars:', { image: img, reference_json: ref });",
                  "if (!img || !ref) {",
                  "  console.warn('Missing image/reference_json variables. Ensure images.csv is attached in Runner.');",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Capture client and server timings, then fetch system metrics",
                  "let clientMs = pm.response.responseTime;",
                  "let serverMs = 0;",
                  "try {",
                  "  const body = pm.response.json();",
                  "  if (body && typeof body.execution_time_seconds === 'number') {",
                  "    serverMs = body.execution_time_seconds * 1000;",
                  "  }",
                  "} catch (e) {}",
                  "",
                  "function recordAndMaybeRender(extraMetrics) {",
                  "  const rec = {",
                  "    ts: new Date().toISOString(),",
                  "    client_ms: clientMs,",
                  "    server_ms: serverMs,",
                  "    metrics: extraMetrics || null",
                  "  };",
                  "  let results = [];",
                  "  try { results = JSON.parse(pm.collectionVariables.get('results') || '[]'); } catch(e) { results = []; }",
                  "  results.push(rec);",
                  "  pm.collectionVariables.set('results', JSON.stringify(results));",
                  "  try { pm.environment.set('results', JSON.stringify(results)); } catch(e) {}",
                  "  console.log('RESULT', JSON.stringify(rec));",
                  "",
                  "  // If this is the last iteration in Runner, render a small table",
                  "  if (pm.info && pm.info.iteration !== undefined && (pm.info.iteration === pm.info.iterationCount - 1)) {",
                  "    const tmpl = `",
                  "      <style>table{border-collapse:collapse}td,th{border:1px solid #ccc;padding:4px}</style>",
                  "      <table>",
                  "        <tr><th>#</th><th>Timestamp</th><th>Client ms</th><th>Server ms</th><th>CPU%</th><th>RAM%</th><th>GPU%</th><th>GPU Mem%</th></tr>",
                  "        {{#each rows}}",
                  "          <tr>",
                  "            <td>{{@index}}</td>",
                  "            <td>{{ts}}</td>",
                  "            <td>{{client_ms}}</td>",
                  "            <td>{{server_ms}}</td>",
                  "            <td>{{cpu}}</td>",
                  "            <td>{{ram}}</td>",
                  "            <td>{{gpu}}</td>",
                  "            <td>{{gpu_mem}}</td>",
                  "          </tr>",
                  "        {{/each}}",
                  "      </table>`;",
                  "    const rows = results.map(r => ({",
                  "      ts: r.ts,",
                  "      client_ms: r.client_ms,",
                  "      server_ms: r.server_ms,",
                  "      cpu: r.metrics && r.metrics.cpu_percent != null ? r.metrics.cpu_percent : '',",
                  "      ram: r.metrics && r.metrics.memory && r.metrics.memory.percent != null ? r.metrics.memory.percent : '',",
                  "      gpu: r.metrics && r.metrics.gpus && r.metrics.gpus[0] && r.metrics.gpus[0].utilization_gpu_percent != null ? r.metrics.gpus[0].utilization_gpu_percent : '',",
                  "      gpu_mem: r.metrics && r.metrics.gpus && r.metrics.gpus[0] && r.metrics.gpus[0].memory_percent != null ? r.metrics.gpus[0].memory_percent : ''",
                  "    }));",
                  "    pm.visualizer.set(tmpl, { rows });",
                  "  }",
                  "}",
                  "",
                  "// Try to fetch metrics from API for richer reporting (optional)",
                  "pm.sendRequest({",
                  "  url: pm.variables.replaceIn('{{baseUrl}}/metrics'),",
                  "  method: 'GET'",
                  "}, function (err, res) {",
                  "  if (err || !res) {",
                  "    recordAndMaybeRender(null);",
                  "    return;",
                  "  }",
                  "  try {",
                  "    recordAndMaybeRender(res.json());",
                  "  } catch (e) {",
                  "    recordAndMaybeRender(null);",
                  "  }",
                  "});",
                  "",
                  "pm.test('HTTP 200', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200]);",
                  "});",
                  "pm.test('Timings captured', function () {",
                  "  pm.expect(clientMs).to.be.a('number');",
                  "});"
                ]
              }
            }
          ]
        }
        ,
        {
          "name": "Visualize results (inline)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/metrics",
              "host": ["{{baseUrl}}"],
              "path": ["metrics"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let raw = pm.environment.get('results') || pm.collectionVariables.get('results') || '[]';",
                  "let results = [];",
                  "try { results = JSON.parse(raw); } catch(e) { results = []; }",
                  "",
                  "// Build rows and basic stats for visibility even without Visualize tab",
                  "const toNum = v => typeof v === 'number' && isFinite(v) ? v : null;",
                  "const nums = arr => arr.filter(v => v != null).sort((a,b)=>a-b);",
                  "const pct = (sorted, p) => { if (!sorted.length) return null; const i = Math.floor((p/100)* (sorted.length-1)); return sorted[i]; };",
                  "const clientList = nums(results.map(r => toNum(r.client_ms)));",
                  "const serverList = nums(results.map(r => toNum(r.server_ms)));",
                  "const sum = arr => arr.reduce((a,b)=>a+b,0);",
                  "const avg = arr => arr.length ? sum(arr)/arr.length : null;",
                  "const clientAvg = avg(clientList);",
                  "const serverAvg = avg(serverList);",
                  "const clientP95 = pct(clientList,95);",
                  "const serverP95 = pct(serverList,95);",
                  "pm.test('Rows collected: ' + results.length, function () { pm.expect(true).to.be.true; });",
                  "pm.test('Client ms avg: ' + (clientAvg!=null?clientAvg.toFixed(1):'n/a'), function () { pm.expect(true).to.be.true; });",
                  "pm.test('Client ms p95: ' + (clientP95!=null?clientP95.toFixed(1):'n/a'), function () { pm.expect(true).to.be.true; });",
                  "pm.test('Server ms avg: ' + (serverAvg!=null?serverAvg.toFixed(1):'n/a'), function () { pm.expect(true).to.be.true; });",
                  "pm.test('Server ms p95: ' + (serverP95!=null?serverP95.toFixed(1):'n/a'), function () { pm.expect(true).to.be.true; });",
                  "const tmpl = `",
                  "  <style>table{border-collapse:collapse}td,th{border:1px solid #ccc;padding:4px}</style>",
                  "  <table>",
                  "    <tr><th>#</th><th>Timestamp</th><th>Client ms</th><th>Server ms</th><th>CPU%</th><th>RAM%</th><th>GPU%</th><th>GPU Mem%</th></tr>",
                  "    {{#each rows}}",
                  "      <tr>",
                  "        <td>{{@index}}</td>",
                  "        <td>{{ts}}</td>",
                  "        <td>{{client_ms}}</td>",
                  "        <td>{{server_ms}}</td>",
                  "        <td>{{cpu}}</td>",
                  "        <td>{{ram}}</td>",
                  "        <td>{{gpu}}</td>",
                  "        <td>{{gpu_mem}}</td>",
                  "      </tr>",
                  "    {{/each}}",
                  "  </table>`;",
                  "const rows = results.map(r => ({",
                  "  ts: r.ts,",
                  "  client_ms: r.client_ms,",
                  "  server_ms: r.server_ms,",
                  "  cpu: r.metrics && r.metrics.cpu_percent != null ? r.metrics.cpu_percent : '',",
                  "  ram: r.metrics && r.metrics.memory && r.metrics.memory.percent != null ? r.metrics.memory.percent : '',",
                  "  gpu: r.metrics && r.metrics.gpus && r.metrics.gpus[0] && r.metrics.gpus[0].utilization_gpu_percent != null ? r.metrics.gpus[0].utilization_gpu_percent : '',",
                  "  gpu_mem: r.metrics && r.metrics.gpus && r.metrics.gpus[0] && r.metrics.gpus[0].memory_percent != null ? r.metrics.gpus[0].memory_percent : ''",
                  "}));",
                  "pm.visualizer.set(tmpl, { rows });",
                  "pm.test('HTTP 200', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200]);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ,{
    "name": "Metrics",
    "item": [
      {
        "name": "Get system metrics",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "{{baseUrl}}/metrics",
            "host": ["{{baseUrl}}"],
            "path": ["metrics"]
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "type": "text/javascript",
              "exec": [
                "let data = {};",
                "try { data = pm.response.json(); } catch(e) { data = {}; }",
                "pm.test('HTTP 200', function () {",
                "  pm.expect(pm.response.code).to.be.oneOf([200]);",
                "});",
                "const tmpl = `",
                "  <style>table{border-collapse:collapse}td,th{border:1px solid #ccc;padding:4px}</style>",
                "  <table>",
                "    <tr><th>Timestamp</th><th>CPU%</th><th>RAM%</th><th>GPU%</th><th>GPU Mem%</th></tr>",
                "    <tr>",
                "      <td>{{ts}}</td>",
                "      <td>{{cpu}}</td>",
                "      <td>{{ram}}</td>",
                "      <td>{{gpu}}</td>",
                "      <td>{{gpu_mem}}</td>",
                "    </tr>",
                "  </table>`;",
                "const gpu = (data.gpus && data.gpus[0]) || {};",
                "pm.visualizer.set(tmpl, {",
                "  ts: new Date().toISOString(),",
                "  cpu: data.cpu_percent != null ? data.cpu_percent : '',",
                "  ram: data.memory && data.memory.percent != null ? data.memory.percent : '',",
                "  gpu: gpu.utilization_gpu_percent != null ? gpu.utilization_gpu_percent : '',",
                "  gpu_mem: gpu.memory_percent != null ? gpu.memory_percent : ''",
                "});"
              ]
            }
          }
        ]
      }
    ]
  },
  {
    "name": "Results",
    "item": [
      {
        "name": "Visualize results",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "{{baseUrl}}/metrics",
            "host": ["{{baseUrl}}"],
            "path": ["metrics"]
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "type": "text/javascript",
              "exec": [
                "// Read the aggregated results from environment (fallback to collection)",
                "let raw = pm.environment.get('results') || pm.collectionVariables.get('results') || '[]';",
                "let results = [];",
                "try { results = JSON.parse(raw); } catch(e) { results = []; }",
                "",
                "const tmpl = `",
                "  <style>table{border-collapse:collapse}td,th{border:1px solid #ccc;padding:4px}</style>",
                "  <table>",
                "    <tr><th>#</th><th>Timestamp</th><th>Client ms</th><th>Server ms</th><th>CPU%</th><th>RAM%</th><th>GPU%</th><th>GPU Mem%</th></tr>",
                "    {{#each rows}}",
                "      <tr>",
                "        <td>{{@index}}</td>",
                "        <td>{{ts}}</td>",
                "        <td>{{client_ms}}</td>",
                "        <td>{{server_ms}}</td>",
                "        <td>{{cpu}}</td>",
                "        <td>{{ram}}</td>",
                "        <td>{{gpu}}</td>",
                "        <td>{{gpu_mem}}</td>",
                "      </tr>",
                "    {{/each}}",
                "  </table>`;",
                "const rows = results.map(r => ({",
                "  ts: r.ts,",
                "  client_ms: r.client_ms,",
                "  server_ms: r.server_ms,",
                "  cpu: r.metrics && r.metrics.cpu_percent != null ? r.metrics.cpu_percent : '',",
                "  ram: r.metrics && r.metrics.memory && r.metrics.memory.percent != null ? r.metrics.memory.percent : '',",
                "  gpu: r.metrics && r.metrics.gpus && r.metrics.gpus[0] && r.metrics.gpus[0].utilization_gpu_percent != null ? r.metrics.gpus[0].utilization_gpu_percent : '',",
                "  gpu_mem: r.metrics && r.metrics.gpus && r.metrics.gpus[0] && r.metrics.gpus[0].memory_percent != null ? r.metrics.gpus[0].memory_percent : ''",
                "}));",
                "pm.visualizer.set(tmpl, { rows });",
                "",
                "pm.test('HTTP 200', function () {",
                "  pm.expect(pm.response.code).to.be.oneOf([200]);",
                "});"
              ]
            }
          }
        ]
      }
    ]
  }]
}

